/* pages/tabbar/index.wxss */
.tabbar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  box-shadow: -1rpx -1rpx 1rpx rgba(150,150,150,0.2) ;
  z-index: 10;
  display: flex;
  display: -webkit-flex;
}
.tabbar navigator {
  -webkit-flex:1; 
  flex:1;
  text-align: center;
}
.tabbar image {
  width: 36rpx;
  height: 36rpx;
  margin: 9rpx auto;
  display: block;
}

.tabbar navigator image:last-of-type {
  width: 51rpx;
  height: 39rpx;
  padding-left: 10rpx
}

.tabbar navigator:last-of-type image:last-of-type {
  width: 41rpx;
  height: 38rpx;
}

.tabbar image[hidden] {
  display: none;
}
.tabbar text {
  font-size: 20rpx;
  color: #333;
  display: block
}
.tabbar text.active {
  color: #C71B1B;
}

.fl {
  float: left
}
.fr {
  float: right
}
.clearfix::before {
  content: "";
  display: table
}
.clearfix::after {
  content: "";
  display: table;
  clear: both;
}