/* pages/user/index.wxss */
@import "/utils/common.wxss";
@import "/pages/tabbar/index.wxss";
page {
  background-color: #fff
}
.banner {
  width: 100vw;
  height: 300rpx;
  position: relative;
  margin-bottom: 118rpx;
}

.banner image:first-of-type {
  display: block;
  width: 100%;
  height: 100%;
}

.banner .name {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.banner image:last-of-type {
  position: absolute;
  left: 50%;
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin-left: -90rpx;
  bottom: -90rpx;
  border-radius: 100%;
}

/* lists  */
.lists .list {
  padding: 0 30rpx;
  border-bottom: 1px solid #f0f0f0;
  height: 98rpx;
  line-height: 98rpx;
}

.lists .list image:first-of-type {
  display: inline-block;
  width: 57rpx;
  height: 43rpx;
  margin-top: 26.5rpx;
}

.lists .list image:last-of-type {
  display: inline-block;
  width: 20rpx;
  height: 26rpx;
  margin-top: 36rpx;
}

.lists .list view {
  color: #333;
  font-size: 32rpx;
  margin-left: 40rpx;
}

.lists .list:nth-of-type(2) image:first-of-type {
  width: 54rpx;
  height: 48rpx;
  margin-top: 24rpx;
}